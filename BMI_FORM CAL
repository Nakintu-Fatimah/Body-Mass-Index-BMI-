    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        
        double Height = Double.parseDouble(Cots.getText());
        double Weight = Double.parseDouble(Cots1.getText());
        double BMI = (Weight/(Height*Height));
        String cal = String.format( "%.2f", BMI);
        
        BMI.setText(cal);
        if (BMI<18.5){
          BMI.setOpaque(true);
          BMI.setBackground(Color.blue);
          jLabel6.setForeground(Color.blue);
          jLabel6.setText("Under Weight");
          
        }
        else if (BMI<=24.9){
         BMI.setOpaque(true);
          BMI.setBackground(Color.red);
          jLabel6.setForeground(Color.red);
          jLabel6.setText("Normal Weight");   
        }
        else if (BMI<=29.9){
           BMI.setOpaque(true);
          BMI.setBackground(Color.pink);
          jLabel6.setForeground(Color.pink);
          jLabel6.setText("OverWeight");
        }
        else if (BMI>=30){
           BMI.setOpaque(true);
          BMI.setBackground(Color.orange);
          jLabel6.setForeground(Color.orange);
          jLabel6.setText("Obese");
        }
    }                                        

