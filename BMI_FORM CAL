    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
Cots.setText("");
Cots1.setText("");
BMI.setText("");
BMI.setOpaque(true);
BMI.setBackground(null);
jLabel13.setText("");

 
 
 

        
    }                                        

